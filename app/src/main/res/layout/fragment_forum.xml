<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào,"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txtNameUser_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lê Đức Tâm"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"

            android:layout_marginEnd="30dp"
            android:background="@drawable/search_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_search"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tìm kiếm theo tên"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/vie_bg"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:scrollbars="none"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/layout_course_forum"
                    android:orientation="vertical"
                    android:layout_width="143dp"
                    android:layout_height="169dp"
                    android:padding="20dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#E5DFF5"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/radius_white"
                        android:src="@drawable/ic_forum"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Khóa học"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:singleLine="false"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_Schedule_forum"
                    android:orientation="vertical"
                    android:layout_width="143dp"
                    android:layout_height="170dp"
                    android:padding="20dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#E4EDFF"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/radius_white"
                        android:src="@drawable/ic_schedule_blue"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Thời khóa biểu"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:singleLine="false"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_task_forum"
                    android:orientation="vertical"
                    android:layout_width="143dp"
                    android:layout_height="169dp"
                    android:padding="20dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#FFDDB6"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/radius_white"
                        android:src="@drawable/ic_task_blue"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Nhiệm vụ"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:singleLine="false"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_fee_forum"
                    android:orientation="vertical"
                    android:layout_width="143dp"
                    android:layout_height="169dp"
                    android:padding="20dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#C9FFCB"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/radius_white"
                        android:src="@drawable/ic_fee_blue"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Học phí"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:singleLine="false"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Lịch học hôm nay"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryc_forum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
</LinearLayout>
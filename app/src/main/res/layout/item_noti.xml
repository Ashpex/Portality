<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/radius"
    android:backgroundTint="#E4EDFF">
    <ImageButton
        android:id="@+id/btnCourse_item_noti"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/dark_blue"
        android:background="@drawable/radius"
        android:src="@drawable/ic_book_white"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/content_item_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Thông báo đuôi học đến từ ban giám hiệu nhà trường"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_clock"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/time_item_noti"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textSize="14sp"
                android:text="ngày hôm qua năm ngoái"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/radius"
    android:backgroundTint="#E4EDFF">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/dark_blue"
        android:background="@drawable/radius"
        android:src="@drawable/ic_book_white"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameCourse_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/name_course"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/nameTeacher_item"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="14sp"
            android:text="@string/teacher"
            android:textColor="@color/black"/>
        <LinearLayout
            android:id="@+id/layout_item"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:backgroundTint="#939695"
            android:background="@drawable/radius"
            android:layout_gravity="end">
            <ImageView
                android:id="@+id/ic_signUp_item"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:src="@drawable/ic_x"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginStart="2dp"
                android:id="@+id/txtSignUp_item"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Hủy đăng ký"
                android:textSize="9sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:layout_gravity="top"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>